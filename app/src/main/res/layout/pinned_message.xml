<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/im_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pin_blue"
        android:contentDescription="@string/im_description_pin_message" />

    <TextView
        android:id="@+id/tv_sender_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/blue_500"
        android:textSize="13sp"
        android:lines="1"
        android:maxLines="1"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@id/im_pin"
        app:layout_constraintEnd_toStartOf="@id/im_unpin_message"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pinned_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sender_message"
        app:layout_constraintEnd_toStartOf="@id/im_unpin_message"
        app:layout_constraintStart_toEndOf="@id/im_pin"
        android:textSize="15sp" />

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/im_unpin_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_grey"
        android:layout_margin="16dp"
        android:contentDescription="@string/image_description_unpin_message" />

</androidx.constraintlayout.widget.ConstraintLayout>